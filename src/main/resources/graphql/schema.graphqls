type Book {
    id : ID!
    name: String
    rating: Rating
    author: Author
}

type Author {
    id : ID!
    name:String
    surname:String
    age: String
}

enum Rating{
    FIVE, FOUR, THREE, TWO, ONE
}

type Query {
    allBooks : [Book]
    allBooksPaged(page: Int, size: Int): [Book]
    booksById(id:ID) :Book
    allAuthors : [Author]
}

type Mutation {
    createAuthor(name: String,surname:String,age:String):Author
}